@using GameesStore_client.Models
@model IEnumerable<GameViewModel>

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
    <div class="row" id="games">
        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title" style="color: #274666d1;">@item.Name</h5>
                        <img src="@item.Image" class="card-img-bottom" alt="Some photo">
                        <p class="card-text">@item.Price grn</p>
                        <div class="row">
                            <div class="col margin">
                                <p>
                                    <span>
                                        @for (int i = 0; i < item.Rating; i++)
                                        {
                                            <i style="color:#f1f154" class="fas fa-star"></i>
                                        }
                                    </span>
                                </p>
                            </div>
                        </div>
                        <p class="card-text"><small class="text-muted">@item.Genre</small></p>
                        <p class="card-text"><small class="text-muted">@item.Developer</small></p>
                        @*<p class="card-text"><small class="text-muted">@item.Description</small></p>*@
                    </div>
                    <div class="card-footer d-flex align-items-center justify-content-center">
                        <div class="cols-md">
                            <div class="row d-flex justify-content-center align-items-center">
                                @if (User.Identity.Name == "admin")
                                {
                                    using (Html.BeginForm("Edit", "Games", new { Id = item.Id }, FormMethod.Post))
                                    {
                                        <input type="submit" value="Edit" class="btn btn-edit my-margin" />
                                    }
                                    using (Html.BeginForm("Details", "Games", new { Id = item.Id }, FormMethod.Post))
                                    {
                                        <input type="submit" value="Details" class="btn btn-details my-margin" />
                                    }
                                    using (Html.BeginForm("Delete", "Games", new { Id = item.Id }, FormMethod.Post))
                                    {
                                        <input type="submit" value="Delete" class="btn btn-delete my-margin" />
                                    }
                                }
                                else
                                {
                                    using (Html.BeginForm("Details", "Games", new { Id = item.Id }, FormMethod.Post))
                                    {
                                        <input type="submit" value="Details" class="btn btn-details my-margin" />
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (Model.Count() == 0)
        {
            <div class="col-12">
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>Not found</strong> You need check another genre.
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        }
    </div>
</main>