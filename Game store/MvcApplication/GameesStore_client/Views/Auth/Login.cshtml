@using System.Web.Optimization;
@model GameesStore_client.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("`~/Content/customForLogin")

<div class="container mt-4 h-100 w-100 d-flex align-items-center justify-content-center p-5 m-5" style="background-color: rgb(228, 228, 228);box-shadow: 0 0 6px #8e8e8e;">
    <div class="d-flex justify-content-center h-100">
        <div class="user_card">
            <div class="container h-100">
                <div class="d-flex justify-content-center h-100">
                    <div class="user_card">
                        <div class="d-flex justify-content-center form_container">
                            <form method="post" action="/Auth/Login" >
                                <div class="input-group mb-3">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    <input type="text" name="Login" class="form-control input_user" value="Login" placeholder="username">
                                </div>
                                <div class="input-group mb-2">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                                    </div>
                                    <input type="password" name="Password" class="form-control input_pass" value="Password" placeholder="password">
                                </div>
                                <div class="d-flex justify-content-center mt-3 login_container">
                                    <button type="submit" name="button" class="btn btn-details login_btn">Login</button>
                                </div>
                            </form>
                        </div>

                        <div class="mt-4">
                            <div class="d-flex justify-content-center links row">
                                Don't have an account? <a href="/Auth/Register" class="ml-2">Sign Up</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>