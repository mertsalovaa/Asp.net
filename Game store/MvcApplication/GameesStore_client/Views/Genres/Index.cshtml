@model IEnumerable<GameesStore_client.Models.GenreViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<button class="btn btn-outline-danger button">
    @Html.ActionLink("Create new game", "Create")
</button>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-5">
            <div class="card flex-md-row mb-4 box-shadow h-md-250">
                <div class="card-body d-flex flex-column align-items-start">
                    <strong class="d-inline-block mb-2 text-primary">Developer</strong>
                    <h3 class="mb-0">
                        <a class="text-dark" href="#">@Html.DisplayFor(modelItem => item.Company)</a>
                    </h3>
                    <div class="mb-1 text-muted">@DateTime.Now.Year</div>
                    <p class="card-text mb-auto">@Html.DisplayFor(modelItem => item.Description)</p>
                    <div class="cols-md">
                        <div class="row d-flex justify-content-center align-items-center">
                            @using (Html.BeginForm("Edit", "Developers", new { Id = item.Id }, FormMethod.Post))
                            {
                                <input type="submit" value="Edit" class="btn btn-edit my-margin" />
                            }
                            @using (Html.BeginForm("Details", "Developers", new { Id = item.Id }, FormMethod.Post))
                            {
                                <input type="submit" value="Details" class="btn btn-details my-margin" />
                            }
                            @using (Html.BeginForm("Delete", "Developers", new { Id = item.Id }, FormMethod.Post))
                            {
                                <input type="submit" value="Delete" class="btn btn-delete my-margin" />
                            }
                        </div>
                    </div>
                </div>
                <img class="card-img-right flex-auto d-none d-md-block" data-src="@Html.DisplayFor(modelItem => item.Image)" alt="@item.Company" style="width: 180px; height: 180px;" src="@Html.DisplayFor(modelItem => item.Image)" data-holder-rendered="true">
            </div>
        </div>
    }
    <button type="button" class="btn btn-secondary">
        @Html.ActionLink("Back to Games", "../Games/Index")
    </button>
</div>